{
  "mappings": {
    "ConfigurationItem": {
      "properties": {
        "uuid": {
          "type": "string",
          "index": "not_analyzed"
        },
        "category": {
          "type": "string",
          "index": "not_analyzed"
        },
        "model": {
          "type": "string",
          "index": "not_analyzed"
        },
        "geo_location": {
          "properties": {
            "name": {
              "type": "string"
            },
            "location":{
              "type": "geo_point"
            }
          }
        },
        "status": {
          "properties": {
            "status": {
              "type": "string"
            }
          }
        },
        "it_service":{
          "type": "string",
          "index": "not_analyzed"
        }
      },
      "dynamic_templates": [
        {
          "string_as_date": {
            "match_mapping_type": "string",
            "match":   "*_date",
            "mapping": {
              "type": "date"
            }
          }
        }
      ]
    }
  }
}